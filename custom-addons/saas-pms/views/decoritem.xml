<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- decoritemtype -->
        <record id="view_pms_itemtype" model="ir.ui.view">
            <field name="name">saaspms.decoritemtype.list</field>
            <field name="model">saaspms.decoritem.type</field>
            <field name="arch" type="xml">
                <tree string="Decor Item Type" editable="bottom">
                    <field name="name"/>
                    <field name="active"/>
                    <field name="type_category"/>
                </tree>
            </field>
        </record>

        <record id="edit_itemtype" model="ir.ui.view">
            <field name="name">saaspms.decoritemtype.form</field>
            <field name="model">saaspms.decoritem.type</field>
            <field name="arch" type="xml">
                <form string="Tags">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="active" invisible="1"/>
                        </group>
                        <group>
                            <field name="type_category" string="Item Type Category"/>
                        </group>
                        <group>
                            <field name="description" string="Item Type Description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- decoritemunit -->
        <record id="view_pms_itemunit" model="ir.ui.view">
            <field name="name">saaspms.decoritemunit.list</field>
            <field name="model">saaspms.decoritem.unit</field>
            <field name="arch" type="xml">
                <tree string="Decor Item Unit" editable="bottom">
                    <field name="name"/>
                    <field name="type_category"/>
                </tree>
            </field>
        </record>

        <record id="edit_itemunit" model="ir.ui.view">
            <field name="name">saaspms.decoritemunit.form</field>
            <field name="model">saaspms.decoritem.unit</field>
            <field name="arch" type="xml">
                <form string="Tags">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="type_category" string="Item Unit Type Category"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- decoritem -->

        <record id="view_pms_iteminput" model="ir.ui.view">
            <field name="name">saaspms.decoriteminput.list</field>
            <field name="model">saaspms.decoriteminput</field>
            <field name="arch" type="xml">
                <tree string="Decor Item" editable="bottom">
                    <field name="name"/>
                    <field name="active"/>
                    <field name="customer"/>
                    <field name="type"/>
                    <field name="unit_name"/>
                    <field name="unit_type"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="edit_iteminput" model="ir.ui.view">
            <field name="name">saaspms.decoriteminput.form</field>
            <field name="model">saaspms.decoriteminput</field>
            <field name="arch" type="xml">
                <form string="Tags">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="active" invisible="1"/>
                        </group>
                        <group>
                            <field name="customer" string="Customer Name"/>
                        </group>
                        <group>
                            <field name="type"/>
                        </group>
                        <group>
                            <field name="unit_name" string="Unit Name"/>
                        </group>
                        <group>
                            <field name="unit_type" string="Unit Type"/>
                        </group>
                        <group>
                            <field name="description" string="Item Description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>