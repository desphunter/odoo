<odoo>
  <data>
      <!-- explicit list view definition -->
      <record model="ir.ui.view" id="view_pms_decorproject">
          <field name="name">saaspms.pms_decorproject.list</field>
          <field name="model">saaspms.decorproject</field>
          <field name="arch" type="xml">
              <tree>
                  <field name="name"/>
                  <field name="active"/>
                  <field name="date_start"/>
                  <field name="date_required"/>
              </tree>
          </field>
      </record>

      <!-- explicit form view definition -->
      <record id="edit_decorproject" model="ir.ui.view">
          <field name="name">saaspms.pms_decorproject.form</field>
          <field name="model">saaspms.decorproject</field>
          <field name="arch" type="xml">
              <form string="Project">
                  <sheet string="Decor Project">
                      <div class="oe_button_box" name="button_box" groups="base.group_user">
                          <button class="oe_stat_button" type="action"
                                  name="%(view_decorproject_decorpretasks_all)d" icon="fa-tasks">
                              <field string="Decor PreTasks" name="decor_pretasks" widget="statinfo"
                                     options="{'label_field': 'label_tasks'}"/>
                          </button>
                          <button class="oe_stat_button" type="action"
                                  name="%(view_decorproject_decortasks_all)d" icon="fa-tasks">
                              <field string="Decor Tasks" name="decor_tasks" widget="statinfo"
                                     options="{'label_field': 'label_tasks'}"/>
                          </button>
                      </div>
                      <div class="oe_title">
                          <h1>
                              <field name="name" placeholder="Project Name"/>
                          </h1>
                      </div>
                      <notebook>
                          <page name="settings" string="Settings">
                              <group>
                                  <field name="active" widget="radio"/>
                                  <field name="date_start" string="Date Staret"/>
                                  <field name="date_required" string="Date Required"/>
                              </group>
                              <group>
                                  <field name="decor_address" string="Address"/>
                              </group>
                          </page>
                      </notebook>
                  </sheet>
              </form>
          </field>
      </record>

