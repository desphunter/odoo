          <field name="arch" type="xml">
              <search string="装修项目">
                  <field name="name" string="装修项目"/>
                  <field name="stage_id"/>
<!--                  <separator/>-->
<!--                  <filter string="Unread Messages" name="message_needaction"-->
<!--                          domain="[('message_needaction', '=', True)]"/>-->
<!--                  <separator/>-->
